{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit test",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${cmake.testProgram}",
            "args": [
                "${cmake.testArgs}"
            ],
            "preLaunchTask": "build",
        },
        {
            "name": "yalox (cppdbg)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.build/app/app",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "args": [],
            "environment": [],
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb"
            },
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
            },
            "preLaunchTask": "build"
        },
        {
            "name": "yalox (lldb)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/.build/app/app",
            "cwd": "${workspaceFolder}",
            "args": [],
        }
    ]
}